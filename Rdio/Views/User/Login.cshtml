@model string
@{
    ViewBag.Title = "ورود به حساب کاربری";
    Layout = "~/Views/Shared/_MasterAdmin.cshtml";
}

<script src="~/Resource/sha1.min.js"></script>
<div class="clearfix">
    <div class="col-sm-offset-4 col-sm-4">
        <div class="login">
            <form action="/user/login" method="post" autocomplete="off" id="loginform" class="form-horizontal">
                <input type="hidden" name="returnUrl" value="@ViewBag.returnUrl" />
                <div class="form-group">
                    <label class="col-sm-3 control-label">نام کاربری</label>
                    <div class="col-sm-9">
                        <input type="text" class="form-control" id="UserName" name="UserName" placeholder="نام کاربری" tabindex="1">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-3 control-label">کلمه عبور</label>
                    <div class="col-sm-9">
                        <input type="password" class="form-control Password" id="Password" name="Password" placeholder="کلمه عبور" tabindex="2">
                    </div>
                </div>
                <div class="clearfix">
                    <button type="submit" class="btn btn-default pull-left" tabindex="3">ورود به سیستم</button>
                </div>
                @*<hr />
                <div class="clearfix">
                    <a class="pull-right" href="@Url.Action("ResetePassword","User")">بازیابی کلمه عبور</a>
                    <a class="pull-left" href="@Url.Action("Register","User")">ثبت نام</a>
                </div>*@
                @*<input type="text" name="UserName" id="UserName" class="UserName" placeholder="نام کاربری" tabindex="1" /><br>
    <input type="password" name="Password" id="Password" class="Password" placeholder="کلمه عبور" tabindex="2" /><br>*@
                @*<input type="submit" value="ورود به سیستم" tabindex="3" />*@
            </form>
        </div>
        <h2 style="text-align:center;color:#f00">@Model</h2>
    </div>
</div>
<script type="text/javascript">
    $("#UserName").focus();
    $("#loginform").submit(function () {
        $("#Password").val(sha1($("#Password").val()));
    });
</script>
