
@{
    ViewBag.Title = "EditSite";
    Layout = "~/Views/Shared/_MasterAdmin.cshtml";
}

@model Rdio.ViewModel.ContentManager.SiteVM
<div>
    <form class="form-horizontal">
        <input type="hidden" name="_id" value="@Model._id" />
        <div class="form-group">
            <label for="inputEmail3" class="col-sm-2 control-label">نام سایت</label>
            <div class="col-sm-10">
                <input id="title" class="form-control input-lg" type="text" placeholder="نام سایت" value="@Model.title">
            </div>
        </div>
        <div class="form-group">
            <label for="inputEmail3" class="col-sm-2 control-label">آدرس سایت</label>
            <div class="col-sm-10">
                <input id="url" class="form-control input-lg" type="text" placeholder="آدرس سایت http://www.aramdata.ir" value="@Model.url">
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="button" id="editsitesubmit" class="btn btn-success pull-left">ثبت</button>
            </div>
        </div>
        </form>
</div>

<script>
    $(document).ready(function () {
        Rdio.ContentManager.Event.EditSite();
    });
</script>

